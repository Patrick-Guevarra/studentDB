@model Student.Models.StudentEntity
@{
    string title = ViewBag.Action + "Student";
    ViewData["Title"] = title;
}

<h2>@ViewBag.Title</h2>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    
    <div class="mb-3">
        <label asp-for="FirstName" class="form-label"></label>
        <input asp-for="FirstName" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="LastName" class="form-label"></label>
        <input asp-for="LastName" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Birthday" class="form-label"></label>
        <input asp-for="Birthday" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Major" class="form-label"></label>
        <input asp-for="Major" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="GPA" class="form-label"></label>
        <input asp-for="GPA" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="EnrollmentDate" class="form-label"></label>
        <input asp-for="EnrollmentDate" class="form-control" />
    </div>

    <input type="hidden" asp-for="StudentId" />
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>